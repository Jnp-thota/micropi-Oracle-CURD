// docker run -d --name jenkins \
//   -p 9080:8080 -p 50000:50000 \
//   jenkins/jenkins:lts


//Test
pipeline {

    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Pulling code from GitHub...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                githubNotify context: 'Build', status: 'PENDING'
                echo 'Building project...'
                // Example real build:
                // sh 'chmod +x mvnw'
                // sh './mvnw clean package -DskipTests'
                githubNotify context: 'Build', status: 'SUCCESS'
            }
        }

        stage('Unit Tests') {
            steps {
                githubNotify context: 'Tests', status: 'PENDING'
                echo 'Running unit tests...'
                // Example real tests:
                // sh './mvnw test'
                githubNotify context: 'Tests', status: 'SUCCESS'
            }
            post {
                always {
                    echo 'Unit tests completed'
                    // junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Approval') {
            steps {
                input message: "Build and tests passed. Approve to deploy?", ok: "Approve"
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy stage (manual approval done)'
                // Example deploy:
                // sh 'scp target/myapp.jar user@server:/opt/apps/'
            }
        }
    }

    post {
        failure {
            githubNotify context: 'CI Pipeline', status: 'FAILURE'
        }
        success {
            githubNotify context: 'CI Pipeline', status: 'SUCCESS'
        }
    }
}
