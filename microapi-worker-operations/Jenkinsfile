pipeline {
    agent any

    environment {
        // Replace with the ID of your Jenkins secret text credential (PAT)
        GITHUB_TOKEN_CRED = 'github-https-token'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Pulling code from GitHub...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                withCredentials([string(credentialsId: "${GITHUB_TOKEN_CRED}", variable: 'GITHUB_TOKEN')]) {
                    sh '''
                    curl -H "Authorization: token $GITHUB_TOKEN" \
                         -X POST \
                         -d '{"state":"pending","context":"Build"}' \
                         https://api.github.com/repos/Jnp-thota/micropi-Oracle-CURD/statuses/${GIT_COMMIT}
                    '''
                }

                echo 'Building project...'
                // Example real build commands:
                // sh 'chmod +x mvnw'
                // sh './mvnw clean package -DskipTests'

                withCredentials([string(credentialsId: "${GITHUB_TOKEN_CRED}", variable: 'GITHUB_TOKEN')]) {
                    sh '''
                    curl -H "Authorization: token $GITHUB_TOKEN" \
                         -X POST \
                         -d '{"state":"success","context":"Build"}' \
                         https://api.github.com/repos/Jnp-thota/micropi-Oracle-CURD/statuses/${GIT_COMMIT}
                    '''
                }
            }
        }

        stage('Unit Tests') {
            steps {
                withCredentials([string(credentialsId: "${GITHUB_TOKEN_CRED}", variable: 'GITHUB_TOKEN')]) {
                    sh '''
                    curl -H "Authorization: token $GITHUB_TOKEN" \
                         -X POST \
                         -d '{"state":"pending","context":"Tests"}' \
                         https://api.github.com/repos/Jnp-thota/micropi-Oracle-CURD/statuses/${GIT_COMMIT}
                    '''
                }

                echo 'Running unit tests...'
                // Example real tests:
                // sh './mvnw test'

                withCredentials([string(credentialsId: "${GITHUB_TOKEN_CRED}", variable: 'GITHUB_TOKEN')]) {
                    sh '''
                    curl -H "Authorization: token $GITHUB_TOKEN" \
                         -X POST \
                         -d '{"state":"success","context":"Tests"}' \
                         https://api.github.com/repos/Jnp-thota/micropi-Oracle-CURD/statuses/${GIT_COMMIT}
                    '''
                }
            }
            post {
                always {
                    echo 'Unit tests completed'
                    // Optionally include JUnit reports
                    // junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Approval') {
            steps {
                input message: "Build and tests passed. Approve to deploy?", ok: "Approve"
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy stage (manual approval done)'
                // Example deploy:
                // sh 'scp target/myapp.jar user@server:/opt/apps/'
            }
        }
    }

    post {
        success {
            withCredentials([string(credentialsId: "${GITHUB_TOKEN_CRED}", variable: 'GITHUB_TOKEN')]) {
                sh '''
                curl -H "Authorization: token $GITHUB_TOKEN" \
                     -X POST \
                     -d '{"state":"success","context":"CI Pipeline"}' \
                     https://api.github.com/repos/Jnp-thota/micropi-Oracle-CURD/statuses/${GIT_COMMIT}
                '''
            }
        }
        failure {
            withCredentials([string(credentialsId: "${GITHUB_TOKEN_CRED}", variable: 'GITHUB_TOKEN')]) {
                sh '''
                curl -H "Authorization: token $GITHUB_TOKEN" \
                     -X POST \
                     -d '{"state":"failure","context":"CI Pipeline"}' \
                     https://api.github.com/repos/Jnp-thota/micropi-Oracle-CURD/statuses/${GIT_COMMIT}
                '''
            }
        }
    }
}
